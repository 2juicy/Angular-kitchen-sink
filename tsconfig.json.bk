{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true
  },
  "filesGlob": [
    "./**/*.ts",
    "!./angular2/**/*.ts",
    "!./node_modules/**/*.ts",
    "!angular2/**/*.ts",
    "!node_modules/**/*.ts"
  ],
  "exclude": [
    "nods_modules",
    "angular2",
    "typings",
    "./nods_modules",
    "./angular2",
    "./typings"
  ]
}